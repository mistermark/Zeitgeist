    <article class="{{post_class}}">

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

        {{! Everything below outputs content of the the post which has been published }}
        
        <h2 class="post-title">{{{title}}}</h2>

        <section class="post-content">
            {{content}}
        </section>

        <span class="post-meta">
            <ul>
                <li><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time></li>
                {{#if tags}}
                <li>on {{tags separator=" | "}}</li>
                {{/if}}
            </ul>
        </span>

        <footer class="post-footer">

            {{#if author}}
                <section class="author">
                    {{!-- {{author.cover}} --}}
                    <img src="{{author.image}}" class="author-image"/>
                    <h4>{{author.name}}</h4>
                    {{!-- <p>{{author.location}}</p> --}}
                    <p>{{author.bio}}</p>
                    {{!-- <p><a href="{{author.website}}">{{author.website}}</a></p> --}}

                </section>
            {{/if}}

            <section class="post-share">
                <h4>Share this post</h4>
                <a class="foundicon-twitter" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <span class="hidden">Twitter</span>
                </a>
                <a class="foundicon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <span class="hidden">Facebook</span>
                </a>
                <a class="foundicon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <span class="hidden">Google+</span>
                </a>
            </section>

        </footer>

        {{/post}}

    </article>

        </div>
    </div>

</main>